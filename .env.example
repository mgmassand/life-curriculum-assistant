# Life Curriculum Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="Life Curriculum Assistant"
DEBUG=false
SECRET_KEY=change-me-to-a-long-random-string-at-least-32-chars

# =============================================================================
# DATABASE
# =============================================================================
# Development (local PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/lifecurriculum

# Production (Docker Compose)
# DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# PostgreSQL credentials (for Docker)
POSTGRES_USER=lifecurriculum
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=lifecurriculum

# Connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=change-me-to-another-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPENAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# =============================================================================
# RATE LIMITING
# =============================================================================
FREE_DAILY_CHAT_LIMIT=20
PREMIUM_DAILY_CHAT_LIMIT=200

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
# Example for Gmail (enable "App Passwords" in Google account)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Example for SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@lifecurriculum.app
SMTP_FROM_NAME=Life Curriculum Assistant
SMTP_USE_TLS=true

# =============================================================================
# FRONTEND/URL SETTINGS
# =============================================================================
# Used for email links (verification, password reset)
FRONTEND_URL=http://localhost:8000

# Production example:
# FRONTEND_URL=https://lifecurriculum.app

# =============================================================================
# TOKEN EXPIRY
# =============================================================================
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# =============================================================================
# PRODUCTION SERVER (Gunicorn)
# =============================================================================
PORT=8000
GUNICORN_WORKERS=4
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: SENTRY ERROR TRACKING
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# OPTIONAL: REDIS (for caching/sessions)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
